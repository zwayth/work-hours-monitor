{
    "manifest_version": 3,
    "name": "Work Hours Monitor",
    "version": "1.0",
    "description": "Monitors browser activity during work hours and logs it locally.",
    "permissions": [
      "storage",
      "webNavigation"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "options_page": "options.html"
  }